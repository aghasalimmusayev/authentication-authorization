{
  "compilerOptions": {
    "rootDir": "./src", 
    "outDir": "./dist", 
    "module": "commonjs", 
    "target": "esnext", 
    "moduleResolution": "node", 
    "esModuleInterop": true, 
    "strict": true, 
    "baseUrl": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {"@common/*":["common/*"]}
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
